            <TextBlock x:ConnectionId='5' x:Name="txtQueDebemosHacer" HorizontalAlignment="Left" Margin="22,579,0,0" Grid.Row="1" Text="¿Qué debería hacer " TextWrapping="Wrap" VerticalAlignment="Top" FocusVisualPrimaryBrush="White" Foreground="#FF0F0F0F" FontSize="22" FontWeight="Bold" FontFamily="Arial Black" Height="26" Width="198"/>
            <Button x:ConnectionId='6' x:Name="btnAtacar" Content="ATACAR" Margin="73,649,0,0" Grid.Row="1" VerticalAlignment="Top" FontWeight="Bold" FontFamily="Arial Black" FontSize="36" Height="46" Width="181" Foreground="Black" FocusVisualSecondaryBrush="{x:Null}" BorderBrush="Black" FocusVisualPrimaryBrush="#FF53C55D"                        />
            <Button x:ConnectionId='7' x:Name="btnCurar" Content="CURAR" Margin="73,716,0,0" Grid.Row="1" VerticalAlignment="Top" FontWeight="Bold" FontFamily="Arial Black" FontSize="36" Height="46" Width="181" Foreground="Black" BorderBrush="#FF080808"/>
            <Button x:ConnectionId='8' x:Name="btnSubirAtaque" Content="SUBIR ATAQUE" Margin="340,649,0,0" Grid.Row="1" VerticalAlignment="Top" FontWeight="Bold" FontFamily="Arial Black" FontSize="36" Height="46" Width="271" Foreground="Black" BorderBrush="#FF040404"/>
            <Button x:ConnectionId='9' x:Name="btnRendirseCombate" Content="RENDIRSE" Margin="340,716,0,0" Grid.Row="1" VerticalAlignment="Top" FontWeight="Bold" FontFamily="Arial Black" FontSize="36" Height="46" Width="271" Foreground="Black" BorderBrush="#FF040404"/>


            <RelativePanel x:ConnectionId='10' x:Name="relative_poke_izquierda" Margin="121,136,901,306" Grid.RowSpan="2"/>
            <RelativePanel x:ConnectionId='11' x:Name="relative_poke_derecha" Margin="884,136,138,309" Grid.RowSpan="2"/>



        </Grid>

    </Viewbox>

</Page>


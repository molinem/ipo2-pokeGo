<Page
    x:Class="PokeGo.Inicio"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PokeGo"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="99*"/>
            <RowDefinition Height="26*"/>
        </Grid.RowDefinitions>

        <Image Source="/Assets/Inicio/inicial.png" Stretch="Fill" Grid.RowSpan="2"/>
        <TextBlock x:ConnectionId='2' x:Name="txtInicio" HorizontalAlignment="Left" Margin="71,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FocusVisualPrimaryBrush="Black" Foreground="#FF060606" FontSize="30" Grid.Row="1">
            <Run Text="¡Bienvenidos al mundo Pokémon! Prepárate para explorar un mundo lleno de criaturas fascinantes y misterios ocultos."/>
            <Run Text="App desarrollada por:"/>
            <Bold><Run Text="Luis Molina Muñoz-Torrero"/></Bold>
            <Run Text="y"/>
            <Bold><Run Text="Ángel Villafranca Iniesta"/></Bold>
        </TextBlock>

    </Grid>
</Page>

